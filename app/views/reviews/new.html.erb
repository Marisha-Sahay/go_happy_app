<div class="row">
  <div class="col-md-6">
    <%= form_tag "/reviews", method: :post do %>
    <form class="form-horizontal">
      <div class="row">
        <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10 inputs-group"> 
            <%=label_tag :review %>
            <%=text_area_tag :review,"",class:"text-area" %>
          </div>
        </div>
      </div>
      <div class="button" align="center">
        <%= button_tag "<span> Submit My review</span>".html_safe, class: "btn primary-btn"%>
      </div>
      <%=hidden_field_tag :user_id, params[:profile_id] %>
      <% end %>
    </form>
  </div>
</div>