<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
<h1>User signup</h1>
    <% if @user && @user.errors.any? %>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li class="error"><%= message %></li>
        <%end%>
      </ul>
    <% end %>
<%= form_tag '/users', method: :post do %>
<form class="form-horizontal">
<div class="form-group">


<div class="form-group">
<%=label_tag :name %>
<%=text_field_tag :name,"", class:"form-control" %>
</div>
<div class="form-group">
<%=label_tag :address %>
<%=text_field_tag :address, "", class:"form-control"  %>
</div>
<div class="form-group">
<%=label_tag :email %>
<%=text_field_tag :email, "", class:"form-control" %>
</div>
<div class="form-group">
<%=label_tag :password %>
<%=text_field_tag :password, "", class:"form-control" %>
</div>
<div class="form-group">
<%=label_tag :password_confirmation %>
<%=text_field_tag :password_confirmation, "", class:"form-control"  %>
</div>
<div class="radio-inline">
<%=label_tag :seeker%>
<%=radio_button_tag :user_type,"SEEKER",class:"form-control" %>
</div>
<div class="radio-inline">
<%=label_tag :sitter%>
<%=radio_button_tag :user_type,"SITTER",class:"form-control" %>
</div>
<div class="form-group">
<div class="col-sm-offset-2 col-sm-10">
<%= submit_tag "Submit" %>
</div></div>
<% end %>
</form>