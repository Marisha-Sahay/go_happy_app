<div class="row">
  <div class="col-md-6">
    <% if @user && @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li class="error"><%= message %></li>
      <%end%>
    </ul>
    <% end %>
    <%= form_tag "/users", method: :post, :html => {:multipart => true} do %>
    <form class="form-horizontal">
      <div class="row">
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10 inputs-group">
            <%=label_tag :first_name %>
            <%=text_field_tag :first_name,@user.first_name, class:"form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10 inputs-group">
            <%=label_tag :last_name %>
            <%=text_field_tag :last_name,@user.last_name, class:"form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10 inputs-group">
            <%=label_tag :address %>
            <%=text_field_tag :address, @user.address, class:"form-control"  %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10 inputs-group">
            <%=label_tag :phone_no %>
            <%=text_field_tag :phone_no,@user.phone_no, class:"form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10 inputs-group">
            <%=label_tag :email %>
            <%=text_field_tag :email, @user.email, class:"form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10 inputs-group">
            <%=label_tag :password %>
            <%=password_field_tag :password,"", class:"form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10 inputs-group">
            <%=label_tag :password_confirmation %>
            <%=password_field_tag :password_confirmation,"", class:"form-control"  %>
          </div>
        </div>
      </div>
      <div class="row">
      <div class="field">
        <%= label_tag :image_url %><br>
        <%= file_field_tag :image_url %>
      </div>
      </div>
      <%=hidden_field_tag :user_type, params[:user_type] %>

      <div class="button" align="center">
        <%= button_tag "<span> Create Your Account</span>".html_safe, class: "btn primary-btn"%>
      </div>
      <%end%>
    </form>
  </div>
</div>