<section class="breadcrumb-section">
  <div class="container">
      <div class="col-sm-12 col-xs-10 text-center">
        <div class="breadcrumb-content">
          <h2>Account Details</h2>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- /.breadcrumb-section  -->
<!-- Teacher Details Section -->
<section class="teacher-details-section">
  <div class="container">
      <div class="col-sm-10 col-sm-offset-1 col-xs-8 text-center">
        <div class="single-teacher">
          <div class="teacher-img">
            <img alt=""><%= image_tag @user.image_url %>
          </div>
          <h2 class="title-2"><%= @user.first_name %></h2>
          <p class="subtitle color"><%= @user.email %></p>
        </div>
        <div class="teacher-content">
          <p> <%= @user.address %> </p>
          <p><%= @user.created_at %></p>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
</div>
</div>
</div>
</section>

<!-- Call to Action -->
<% if @user.id == current_user.id %>
<section class="callto-action-section">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-xs-12">
        <div class="callto-content">
          <h2>Want to update some information?</h2>
          <div class="button" align="center">
          <a href="/users/<%=@user.id%>/edit">
            <%= button_tag "<span> Edit account</span>".html_safe, class: "btn primary-btn"%>
            </a>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
  </div>
</section>
<% end %>
<!-- /.callto-action-section