<%=form_tag '/login', method: :post do%>
<form class="form-horizontal">
<div class="row">
<br><br><br><br><br>
<div class="form-group">
<div class="col-sm-offset-3 col-sm-6 inputs-group">
<%= label_tag :email %>
<%= text_field_tag :email, "",class:"form-control" %>
</div></div></div>
<div class="row">
<div class="col-sm-offset-3 col-sm-6 inputs-group">
<div class="form-group">
<%= label_tag :password %>
<%= password_field_tag :password, "", class:"form-control" %>
</div><br></div></div>
<div align="center">
<button class="primary-btn" type="submit"><span>Login to Your Account</span></button>
<!-- <%=submit_tag %> -->
</button></div>
<%end%>
</div></form>
<br><br>
<div align="center">
  <a href="/signup">Create a new account</a>
  <br><br><br><br>
</div>