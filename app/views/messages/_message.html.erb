<li class="mar-btm">
  <% if message.user == current_user %>
    <div class="media-right">
  <% else %>
    <div class="media-left">
  <% end %>
    <!-- <img src="http://bootdey.com/img/Content/avatar/avatar1.png" class="img-circle img-sm" alt="Profile Picture"> -->
    <%= image_tag message.user.image_url, class: "img-circle img-sm" %>
  </div>
  <% if message.user == current_user %>
    <div class="media-body pad-hor speech-right">
  <% else %>
    <div class="media-body pad-hor">
  <% end %>
    <div class="speech">
      <a href="#" class="media-heading"><%= message.user.first_name %></a>
      <p><%= message.body %></p>
      <p class="speech-time">
      <i class="fa fa-clock-o fa-fw"></i><%= message.timestamp %>
      </p>
    </div>
  </div>
</li>